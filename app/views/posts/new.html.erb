<h1 class = "text-lg-center title">New Post</h1>

<% if @post.errors.any? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 alert alert-info">
  <ul>
    <% @post.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>
    <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class = "form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.collection_select(:category, Category.order(:title), :id, :title, class: "form-control") %>
    </div>
    <div class="form-group">
    <%= f.file_field :images, multiple: true, class: "form-control " %>
    </div>
    <div class = "form-group">
    <%= f.submit "Post Post", class: "btn btn-info-outline btn-block" %>
    </div>
    <% end %>
  </div>
</div>
